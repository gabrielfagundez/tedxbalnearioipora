<div class="row">
  <div class="col-md-6">
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Upcoming Events</h3>
      </div>
      <div class="box-body">
        <ul class="products-list product-list-in-box">
          <% if @upcoming_events.any? %>
            <% @upcoming_events.each do |event| %>
              <li class="item">
                <div class="product-info">
                  <a href="javascript:void(0)" class="product-title"><%= event.name %></a>
                  <span class="label label-warning pull-right"><%= "#{event.project.name} - #{event.project.client.name}" %></span>
                  <br>
                  <span class="product-title">
                    <%= "#{event.expected_date.strftime("%Y-%m-%d")} (in #{distance_of_time_in_words(Time.now, event.expected_date)})" %>
                  </span>
                  <span class="product-description">
                    <%= event.description || "-" %>
                  </span>
                </div>
              </li>
            <% end %>
          <% else %>
            <div class="c-emtpy-client">
              <%= image_tag 'project.svg', class: 'c-emtpy-client__image' %>
              <div class="c-emtpy-client__title">
                You don't have any upcoming events.
              </div>
              <div class="c-emtpy-client__description">
                Try adding milestones to your projects, or PTO time to the people under the project you handle.
              </div>
            </div>
          <% end %>
        </ul>
      </div>
      <% if @upcoming_events.any? %>
        <div class="box-footer text-center">
          <a href="#" class="uppercase">View All</a>
        </div>
      <% end %>
    </div>
  </div>
</div>
