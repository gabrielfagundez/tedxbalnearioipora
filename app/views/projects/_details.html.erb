<div class="row">
  <div class="col-xs-5">
    <div class="box box-widget widget-user-2">
      <div class="widget-user-header bg-blue">
        <h3 class="widget-user-username" style="margin-left: 0"><%= @project.name %></h3>
        <h5 class="widget-user-desc" style="margin-left: 0"><%= @project.client.name %></h5>
      </div>
      <div class="box-footer no-padding">
        <ul class="nav nav-stacked">
          <li><a href="#">Team Leader <span class="pull-right badge bg-blue"><%= @project.team_leader.name || "-" %></span></a></li>
          <li><a href="#">Daily Meetings <span class="pull-right badge bg-blue"><%= @project.daily_meeting || "No data about daily meetings" %></span></a></li>
          <li><a href="#">Retrospectives <span class="pull-right badge bg-blue"><%= @project.retrospectives || "No data about retrospectives" %></span></a></li>
          <li><a href="#">Iteration Plannings <span class="pull-right badge bg-blue"><%= @project.iteration_planning || "No data about iteration planning" %></span></a></li>
          <li><a href="#">Estimates Model <span class="pull-right badge bg-blue"><%= @project.estimates_model || "No data about estimates model" %></span></a></li>
          <li><a href="#">Issue Tracker <span class="pull-right badge bg-blue"><%= @project.issue_tracker || "No data about issue tracker" %></span></a></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-xs-7">
    <div class="row">
      <div class="col-xs-12">
        <div class="info-box">
          <span class="info-box-icon bg-green"><i class="fa fa-flag-o"></i></span>

          <div class="info-box-content">
            <span class="info-box-text"><b>Mision</b></span>
            <span class="info-box-text"><%= @project.mision %></span>
          </div>
        </div>
      </div>
      <div class="col-xs-12">
        <div class="info-box">
          <span class="info-box-icon bg-yellow"><i class="fa fa-files-o"></i></span>

          <div class="info-box-content">
            <span class="info-box-text"><b>Vision</b></span>
            <span class="info-box-text"><%= @project.vision %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
