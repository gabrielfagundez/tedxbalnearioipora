<div class="box box-widget widget-user-2">
  <div class="widget-user-header bg-green">
    <% if @widgets[:time_usage_report].blank? %>
      <span class="pull-right c-right-option">
        <i class="fa fa-th" style="margin-right: 5px; font-size: 12px"></i>
          <%= link_to "Add to dashboard", toggl_user_widget_project_path(@project, { widget_type: "time_usage_report" }), style: 'color: #ffffff;' %>
      </span>
    <% end %>
    <% if can? :manage, :projects %>
      <span class="pull-right" style="margin-right: 5px; padding: 2px 10px; border: 1px solid; border-radius: 3px;">
        <i class="fa fa-bar-chart"></i>
        <%= link_to "Add Work Entries", work_entries_project_path(@project), style: 'color: #ffffff;' %>
      </span>
    <% end %>
    <h5 class="widget-user-username" style="margin-left: 0; margin-bottom: 10px; font-size: 20px;">Time distribution (%) over the last 10 weeks</h5>
    <h5 class="widget-user-desc" style="margin-left: 0">This report displays how the team invested the time in the last 10 weeks.</h5>
  </div>
  <div class="box-footer no-padding">
    <div class="box-body">
      <canvas class="project_time_usage" style="margin-top: 40px;" data-id=<%= params[:id] %> height="200" width="600"></canvas>
    </div>
  </div>
</div>
