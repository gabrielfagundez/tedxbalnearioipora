<div id="velocity-periods-modal" class="modal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="c-white-box">
          <div class="c-white-box__upper-desc">
            Expected vs Real Hour Usage
          </div>

          <div class="c-white-box__title">
            See Expected vs Real Hours in this Project
          </div>

          <div class="c-white-box__desc">
            <div>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do</div>
            <div>eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,</div>
            <div>quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. </div>
          </div>

          <div class="o-notice-green">You are measuring velocity in a <%= @project.velocity_frequency %> basis. Change this setting <a href="<%= edit_project_path(@project) %>">here</a>.</div>

          <div class="c-white-box__content">
            <div class="c-velocity-table">
              <% @project.velocity_registers.each do |pce| %>
                <div class="c-velocity-table__row">
                  <div class="c-velocity-table__date">
                    <%= pce.start_date.strftime('%m-%d') %> - <%= pce.end_date.strftime('%m-%d') %>
                  </div><div class="c-velocity-table__description">
                    <%= pce.period %>
                  </div><div class="c-velocity-table__points">
                    <%= pce.points %> points
                  </div>
                </div>
              <% end %>
            </div>

            <div class="u-top-padding"></div>

            <div class="c-white-box__title">
              Add new velocity entry
            </div>

            <%= form_tag(project_path(@project), method: "patch") do %>
              <div class="o-form">
                <div class="o-form__label">Start Date</div>
                <%= text_field_tag 'velocity_registers[start_date]', nil, type: 'date', class: "o-form__input", placeholder: @project.next_velocity_register_date %>
                <div class="o-form__description">
                  <!-- Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do. -->
                </div>

                <div class="o-form__label">Description</div>
                <%= text_field_tag 'velocity_registers[period]', nil, class: "o-form__input", placeholder: "Sprint #23" %>
                <div class="o-form__description">
                  <!-- Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do. -->
                </div>

                <div class="o-form__label">Points</div>
                <%= text_field_tag 'velocity_registers[points]', nil, type: 'integer', class: "o-form__input", placeholder: 7 %>
                <div class="o-form__description">
                  <!-- Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do. -->
                </div>

                <div class="c-white-box__action">
                  <%= submit_tag "Add Velocity Entry", class: "o-button" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
