<%= render partial: 'shared/page_title',
  locals: {
    title: @project.name,
    description: @project.client.name,
    menu: []
  }
%>


<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-danger">
        <%= form_tag(enter_work_entries_project_path, method: "post") do %>
          <div class="box-header with-border">
            <h3 class="box-title">Week</h3>
          </div>

          <div class="box-body">
            <div class="row">
              <div class="col-xs-4">
                <div class="form-group">
                  <%= select_tag 'week',
                          options_for_select([
                            Date.today.beginning_of_week(:monday) - 1.week,
                            Date.today.beginning_of_week(:monday) - 2.week,
                            Date.today.beginning_of_week(:monday) - 3.week,
                            Date.today.beginning_of_week(:monday) - 4.week,
                            Date.today.beginning_of_week(:monday) - 5.week,
                            Date.today.beginning_of_week(:monday) - 6.week,
                            Date.today.beginning_of_week(:monday) - 7.week,
                            Date.today.beginning_of_week(:monday) - 8.week,
                            Date.today.beginning_of_week(:monday) - 9.week,
                            Date.today.beginning_of_week(:monday) - 10.week
                          ]),
                          class: "form-control"  %>
                </div>
              </div>
            </div>
          </div>

          <% @users.each do |user| %>
            <div class="box-header with-border">
              <h3 class="box-title"><%= user.full_name %></h3>
            </div>

            <div class="box-body">
              <div class="row">
                <% @categories.each_with_index do |cat, index| %>

                   <div class="col-xs-<%= [0,1,2,3,4].include?(index) ? 2 : 1 %>">
                     <div class="form-group">
                       <label><small><%= [5,6].include?(index) ? cat.name.slice(0..10) : cat.name.slice(0..25) %></small></label>
                       <%= text_field_tag "entries[#{user.id}--#{cat.id}]", "", class: "form-control", placeholder: cat[:name] %>
                     </div>
                   </div>

                 <% end %>
              </div>
            </div>
          <% end %>

          <div class="box-footer">
            <%= submit_tag "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
