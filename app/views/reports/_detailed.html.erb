<section class="c-detailed_report">

  <div class="c-detailed_report__time_entry" ng-repeat="te in timeEntries">

    <div class="c-timer-entries-group-header" ng-if="newDateBlock(te.date, $index)">
      <div class="c-timer-entries-group-header__date-container">
        <span class="c-timer-entries-group-header__date-container__title">{{ te.date }}</span>
        <span class="c-timer-entries-group-header__date-container__super">{{ currentDuration(te.id, te.date, te.duration) }}</span>
      </div>
    </div>

    <div class="c-detailed_report__time_entry__description">
      <i ng-if="empty(te.description)">(no description)</i>
      {{ te.description }}
    </div>

    <span class="label label-info" style="background-color: {{ te.project.color }} !important">{{ te.project.name }}</span>

    <div class="c-detailed_report__time_entry__timespan">
      {{ formatFromTo(te.from, te.to) }}
    </div>

    <div class="c-detailed_report__time_entry__duration">
      {{ formatDuration(te.id, te.date, te.duration) }}
    </div>

    <div class="c-detailed_report__user">
      {{ te.user.full_name }}
    </div>

    <div class="c-detailed_report__time_entry__tag">
      <span class="c-detailed_report__time_entry__tag__label label">{{ te.tag.name }}</span>
    </div>
  </div>

</section>
