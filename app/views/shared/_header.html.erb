<header class="main-header">
  <a href="<%= root_path %>" class="logo" style="background-color: #1a2226">
    <img src="https://mojito.eventemo.com/assets/clients/mojito/logo-large.png" style="width: 120px;">
  </a>

  <nav class="navbar navbar-static-top" role="navigation">
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">

        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-xs"><%= current_user.full_name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header" style="height: auto">
              <p>
                <b><%= current_user.full_name %></b>
                <b><small><%= current_user.email %></small></b>
                <small>Member since <%= current_user.created_at.to_s %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-right">
                <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
