<header class="main-header">
  <a href="<%= root_path %>" class="logo" style="background-color: #1a2226">
    <%= image_tag "logo-large.png", style: "width: 120px;", class: "logo-lg" %>
    <%= image_tag "logo-small.png", style: "width: 25px;", class: "logo-mini" %>
  </a>

  <nav class="navbar navbar-static-top" role="navigation" style="background-color: #1a2226">
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only pull-left">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_user.gravatar_image_url, class: "user-image", alt: "User Image" %>
            <span class="hidden-xs"><%= current_user.full_name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header" style="height: auto">
              <%= image_tag current_user.gravatar_image_url, class: "img-circle", alt: "User Image" %>
              <p>
                <b><%= current_user.full_name %></b>
                <small><%= current_user.email %></small>
              </p>
            </li>
            <li class="user-body">
              <div class="row">
                <div class="col-xs-6 text-center">
                  <%= link_to "Profile", profile_path %>
                </div>
                <div class="col-xs-6 text-center">
                  <a href="#">Settings</a>
                </div>
              </div>
            </li>
            <li class="user-footer">
              <div class="pull-right">
                <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
