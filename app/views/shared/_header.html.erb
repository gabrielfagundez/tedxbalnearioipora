<header class="main-header">
  <a href="<%= root_path %>" class="logo" style="background-color: #1a2226">
    <img src="https://mojito.eventemo.com/assets/clients/mojito/logo-large.png" style="width: 120px;">
  </a>

  <nav class="navbar navbar-static-top" role="navigation" style="background-color: #1a2226">
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">

        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user"></i>
            <span class="hidden-xs"><%= current_user.full_name %></span>
          </a>
          <ul class="dropdown-menu">
            <li class="user-header" style="height: auto">
              <%= image_tag current_user.gravatar_image_url, class: "img-circle", alt: "User Image" %>
              <p>
                <b><%= current_user.full_name %></b>
                <small><%= current_user.email %></small>
              </p>
            </li>
            <li class="user-body">
              <div class="row">
                <div class="col-xs-6 text-center">
                  <%= link_to "Profile", profile_path %>
                </div>
                <div class="col-xs-6 text-center">
                  <a href="#">Settings</a>
                </div>
              </div>
            </li>
            <li class="user-footer">
              <div class="pull-right">
                <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
