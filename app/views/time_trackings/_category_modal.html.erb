<div id="category_modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">Default Modal</h4>
      </div>
      <div class="modal-body">
        <div class="box box-widget">
          <div class="box-footer no-padding">
            <ul class="nav nav-stacked">
              <% @categories.each do |category| %>
                  <li><a href="#" data-category-name="<%= category.name %>" data-category-id="<%= category.id %>" class="js-select-category" ng-click="selectEntity('category', { name: '<%= category.name %>', id: '<%= category.id %>' }, '#category_modal')"><%= category.name %><span class="pull-right badge bg-aqua">Select</span></a></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
