<div id="project_modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">Select a project from the list:</h4>
      </div>
      <div class="modal-body">
        <% @clients.each do |client| %>
          <h4><%= client.name %></h4>
          <div class="box box-widget">
            <div class="box-footer no-padding">
              <ul class="nav nav-stacked">
                <% client.projects.each do |project| %>
                  <li><a href="#" data-project-name="<%= project.name %>" data-project-id="<%= project.id %>" class="js-select-project"><%= project.name %><span class="pull-right badge bg-aqua">Select</span></a></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
