<%= form_tag(link, method: method) do %>
  <div class="box-body">

    <% if @user.errors.present? %>
      <%= @user.errors.full_messages %>
    <% end %>

    <div class="form-group">
      <label>Email</label>
      <%= text_field_tag 'user[email]', @user.email, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Password</label>
      <%= text_field_tag 'user[password]', @user.password, type: 'password', class: "form-control" %>
    </div>

    <div class="form-group">
      <label>First Name</label>
      <%= text_field_tag 'user[first_name]', @user.first_name, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <%= text_field_tag 'user[last_name]', @user.last_name, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Role</label>
      <%= select_tag 'user[role]', options_for_select([["View Only", "view_only"], ["Member", "member"], ["Admin", "admin"]], @user.role || "member"), class: "form-control"  %>
    </div>

    <div class="form-group">
      <label>Clients Assigned</label>
      <%= select_tag 'clients', options_from_collection_for_select(@clients, "id", "name", @user.clients.collect(&:id)), multiple: true, class: "form-control"  %>
      <p class="help-block">
        Select those clients visible to the user.
      </p>
    </div>

  </div>

  <div class="box-footer">
    <%= submit_tag submit_text, class: "btn btn-primary" %>
  </div>
<% end %>
