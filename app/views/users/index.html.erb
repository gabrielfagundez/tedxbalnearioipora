<%= render partial: 'shared/page_title', locals: { title: 'Users' } %>


<section id= "content" class="content" %>
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Users</h3>
          <div class="box-tools pull-right">
            <span><%= link_to "Add New User", new_user_path, class: "label label-info" %></span>
          </div>
        </div>
        <div class="box-body">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Clients</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= link_to user.first_name, edit_user_path(user) %></td>
                  <td><%= user.last_name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.role.try(:titleize) || "-" %></td>
                  <td><%= user.clients.collect(&:name).join(', ') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>


</section>
